#ifndef _LIBCPP_LIMITS_SUPPORT
#define _LIBCPP_LIMITS_SUPPORT

#include <__config>

#ifndef _LIBCPP_HAS_NO_PRAGMA_SYSTEM_HEADER
#pragma GCC system_header
#endif

#ifndef __libcpp_has_include
  #ifndef __has_include
    #define __libcpp_has_include(x) 0
  #else
    #define __libcpp_has_include(x) __has_include(x)
  #endif
#endif

#if defined(_LIBCPP_HAS_LIMITS_API_EXTERNAL) && \
    __libcpp_has_include(<__external_limits>)
#include <__external_limits>
#else

#if defined(_LIBCPP_HAS_LIMITS_API_EXTERNAL)
#define _LIBCPP_LIMITS_ABI_VISIBILITY _LIBCPP_FUNC_VIS
#else
#define _LIBCPP_LIMITS_ABI_VISIBILITY inline _LIBCPP_INLINE_VISIBILITY
#endif

#ifndef _LIBCXX_DISABLE_C_LINKAGE

#include <limits.h>

_LIBCPP_BEGIN_NAMESPACE_STD

_LIBCPP_END_NAMESPACE_STD

#endif // _LIBCXX_DISABLE_C_LINKAGE

#endif // ! __external_limits

#endif // _LIBCPP_LIMITS_SUPPORT
