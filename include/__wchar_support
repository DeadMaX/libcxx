#ifndef _LIBCPP_WCHAR_SUPPORT
#define _LIBCPP_WCHAR_SUPPORT

#include <__config>

#ifndef _LIBCPP_HAS_NO_PRAGMA_SYSTEM_HEADER
#pragma GCC system_header
#endif

#ifndef __libcpp_has_include
  #ifndef __has_include
    #define __libcpp_has_include(x) 0
  #else
    #define __libcpp_has_include(x) __has_include(x)
  #endif
#endif

#if defined(_LIBCPP_HAS_WCHAR_API_EXTERNAL) && \
    __libcpp_has_include(<__external_wchar>)
#include <__external_wchar>
#else

#if defined(_LIBCPP_HAS_WCHAR_API_EXTERNAL)
#define _LIBCPP_WCHAR_ABI_VISIBILITY _LIBCPP_FUNC_VIS
#else
#define _LIBCPP_WCHAR_ABI_VISIBILITY inline _LIBCPP_INLINE_VISIBILITY
#endif

#ifndef _LIBCXX_DISABLE_C_LINKAGE

#include <cwctype>
#include <wchar.h>

_LIBCPP_BEGIN_NAMESPACE_STD

_LIBCPP_END_NAMESPACE_STD

#else

_LIBCPP_BEGIN_NAMESPACE_STD

class mbstate_t {char buf[128];};

_LIBCPP_END_NAMESPACE_STD

#endif

#endif

#endif // _LIBCPP_WCHAR_SUPPORT
